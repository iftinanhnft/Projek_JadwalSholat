<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".database.InputActivity"
    android:orientation="vertical"
    android:background="#4F3BD3D3">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="110dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        android:background="#6DC9F3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_daftar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="Input Note"
                android:textColor="#3F51B5"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_judul"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_daftar"
                android:layout_centerInParent="true"
                android:layout_marginTop="50dp"
                android:hint="Judul"
                android:textColor="@color/black"
                android:textColorHint="#3F51B5" />

            <EditText
                android:id="@+id/et_note"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_judul"
                android:layout_centerInParent="true"
                android:layout_marginBottom="40dp"
                android:hint="Note"
                android:textColor="@color/black"
                android:textColorHint="#3F51B5" />

            <Button
                android:id="@+id/btn_simpan"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_note"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                android:background="#3F51B5"
                android:gravity="center"
                android:text="SIMPAN"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_lihat"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_simpan"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:background="#3F51B5"
                android:text="LIHAT"
                android:textColor="#FFFFFF" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>